                    </div>
                    </div>
                    </header>
                    </div>


                    <div class="container body-content">
                        @RenderBody()
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - Quiz Program</p>
                        </footer>
                    </div>
